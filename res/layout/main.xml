<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
        >

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/v2_top_banner"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="记账本"
                />

        <Button
                android:id="@+id/button_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menubutton"
                android:layout_alignParentRight="true"
                />

        <Button
                android:id="@+id/button_main_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/addbutton"
                android:layout_toLeftOf="@id/button_main_menu"
                />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/textView_main_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777"
                />

        <TextView
                android:id="@+id/textView_main_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777"
                android:layout_below="@id/textView_main_year"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/v1_money_top_toys"
                />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#A8D672"
                android:textSize="14sp"
                android:textColor="#777"
                android:text="日期"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCEDE4"
                android:textSize="14sp"
                android:textColor="#777"
                android:text="内容"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CBCFE8"
                android:textSize="14sp"
                android:textColor="#777"
                android:text="金额"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:background="#FCFBDE"
                android:textColor="#777"
                android:text="备注"/>

    </LinearLayout>

    <ListView
            android:id="@+id/listView_main_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>

</LinearLayout>